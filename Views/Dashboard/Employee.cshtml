@model IEnumerable<Productivity_Analytics.Models.Employee>
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h1 class="mt-4">Employee</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item active">Employee</li>
    </ol>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Employee Table
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Years of Experience</th>
                    <th>Education Level</th>
                    <th>Department</th>
                    <th>Rating</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.Name</td>
                            <td>@emp.Age</td>
                            <td>@emp.YearsOfExperience</td>
                            <td>@emp.EducationLevel</td>
                            <td>@(emp.Department?.DepartmentName ?? "No Department")</td>
                            <td>@(emp.Rating ?? "No Rating")</td>
                        </tr>

                    }
                }
                else
                {
                    <tr>
                        <td colspan="6">No employees found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>